<% layout('layout') -%>

<div class="units-row">

  <div class="unit-60">
    <h2>My Stories</h2>

    <% stories.forEach(function(story) { %>
    
      <section class="story">
        <h3><%= story.title %></h3>

        <p>An Epic <%= story.theme %> Adventure Probably!</p>

        <a href="/read/<%= story.id %>" class="btn btn-blue">Read!</a>
        <a href="/write/<%= story.id %>" class="btn btn-green">Write!</a>
        <a href="/edit/<%= story.id %>" class="btn btn-black">Edit</a>
        <a href="/delete/<%= story.id %>" class="btn btn-red">Delete</a>
      </section>

    <% }); %>
  </div>

  <div class="unit-40">
    <h2>New Story</h2>
    <p>Some fascinating portents and warnings about what is to come will live in this copy here.</p>
    <a href="/new" class="btn btn-big btn-blue">Create</a>
  </div>

</div>
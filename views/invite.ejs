<% layout('layout') -%>

<h2>Invite co-authors to <%= story.title %></h2>

<form method="post" action="/invite/<%= story.id %>/post" id="invite" class="forms forms-columnar">
  <p>
    <label for="title">Twitter name</label>
    <input type="text" id="name" name="name" class="width-100" value="">
  </p>
  <p>
    <input type="submit" class="btn" value="Invite!">
  </p>

</form>

<h2>Current co-authors</h2>

<% if (invites.length < 1) { %>
  <p>None currently.</p>
<% } else { %>

  <ul>
    <% invites.forEach(function(invite) { %>
      <li>
        <a href="http://twitter.com/<%= invite.invited %>">@<%= invite.invited %>
          <% if (invite.accepted) { %>
            (accepted)
          <% } %>
      </li>
    <% }); %>
  </ul>

<% } %>
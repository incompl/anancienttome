<!doctype html>
<html>
  <head>
    <title>Stories...</title>
    <link rel="stylesheet" href="/css/kube.min.css">
    <link rel="stylesheet" href="/css/screen.css">
  </head>
  <body>
    <header>
      <div class="wrapper">
        <h1>Stories...</h1>
      </div>
    </header>
    <nav>
      <div class="wrapper">
        <% if (!user) { %>
          <a href="/">Home</a> | 
          <a href="/auth/twitter">Log in with Twitter</a>
        <% } else { %>
          <a href="/home">Home</a> | 
          <a href="/account">Account</a> | 
          <a href="/logout">Log out</a> |
          Logged in as <%= user.name %>
        <% } %>
      </div>
    </nav>
    <% if (info) { %>
      <% info.forEach(function(msg) { %>
        <div class="flash">
          <div class="wrapper">
            <%= msg %>
          </div>
        </div>
      <% }); %>
    <% } %>
    <% if (error) { %>
      <% error.forEach(function(msg) { %>
        <div class="flash flash-error">
          <div class="wrapper">
            <%= msg %>
          </div>
        </div>
      <% }); %>
    <% } %>
    <div id="content">
      <div class="wrapper">
        <%- body %>
      </div>
    </div>
  </body>
</html>